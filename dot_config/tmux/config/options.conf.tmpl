set -g default-terminal "tmux-256color"
set -as terminal-overrides ',*:Smulx=\E[4::%p1%dm'  # undercurl support
set -as terminal-overrides ',*:Smulx=\E[4::%p1%dm'
set -as terminal-overrides ',*:Setulc=\E[58::2::%p1%{65536}%/%d::%p1%{256}%/%{255}%&%d::%p1%{255}%&%d%;m'  # underscore colors - needs tmux-3.0
set -as terminal-overrides ',*:Setulc=\E[58::2::%p1%{65536}%/%d::%p1%{256}%/%{255}%&%d::%p1%{255}%&%d%;m'
set -as terminal-overrides "*:Tc"
# Allow cursor style escape sequences to pass through (DECSCUSR)
# This ensures Wezterm's cursor style settings work inside Tmux
# \E[0 q = default, \E[1 q = blinking block, \E[2 q = steady block
# \E[3 q = blinking block, \E[4 q = steady underline, \E[5 q = blinking underline
# \E[6 q = steady bar (pipe), \E[7 q = blinking bar
set -as terminal-overrides '*:Ss=\E[%p1%d q:Se=\E[2 q'
# For Wezterm specifically, ensure cursor style sequences pass through
set -as terminal-overrides 'wezterm*:Ss=\E[%p1%d q:Se=\E[2 q'
if 'infocmp -x tmux-256color > /dev/null 2>&1' 'set -g default-terminal "tmux-256color"'

setw -g xterm-keys on
set -s escape-time 10                     # faster command sequences
set -sg repeat-time 600                   # increase repeat timeout
set -g focus-events on
set -g status-position top
set -g mouse on

set -q -g status-utf8 on                  # expect UTF-8 (tmux < 2.2)
set -q -g utf8
setw -q -g utf8 on

set -g history-limit 5000                 # boost history

set -g base-index 1           # start windows numbering at 1
setw -g pane-base-index 1     # make pane numbering consistent with windows
setw -g pane-border-lines heavy     # make pane numbering consistent with windows

setw -g automatic-rename on   # rename window to reflect current program
set -g renumber-windows on    # renumber windows when a window is closed

set -g set-titles on          # set terminal title

set -g display-panes-time 800 # slightly longer pane indicators display time
set -g display-time 1000      # slightly longer status messages display time

set -g status-interval 10     # redraw status line every 10 seconds

set -g detach-on-destroy off

# activity
set -g monitor-activity off
set -g visual-activity off

bind '"' split-window -v -c '#{pane_current_path}' 
bind % split-window -h -c '#{pane_current_path}'   
bind c new-window -c '#{pane_current_path}'        
